{% extends "layout/base.twig" %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Posts
            </h1>
        </div>
    </div>
    {% for post in posts %}
        <div class="row">
            <div class="col-lg-12">

                <h2>
                    <a href="{{ url('post/get/' ~ post.getId()) }}">{{ post.getTitle() }}</a>
                </h2>

                <p class="small">{{ post.getCategory().getName() }}</p>

                <p class="lead">
                    by {{ post.getUser().getUsername() }}
                </p>

                <p>{{ post.getText() }}</p>
                <hr>
                <hr>
            </div>
        </div>
    {% endfor %}


    <!-- Pager -->
    <ul class="pager">
        {% if page > 1 and posts %}
            <li class="previous">
                <a href="{{ url("home?page=" ~ (page -1)) }}">&larr; Older</a>
            </li>
        {% endif %}
        {% if hasNextPage %}
            <li class="next">
                <a href="{{ url("home?page=" ~ (page+1)) }}">Newer &rarr;</a>
            </li>
        {% endif %}
    </ul>

{% endblock %}
