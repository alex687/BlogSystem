{% extends "layout/base.twig" %}

    {% block content %}
        <div class="row">
            <div class="row">
                <h1 class="page-header">
                    Add Post
                </h1>
            </div>
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10">
                    <form method="post">
                        <input type="hidden" value="{{ token }}" name="formToken">

                        <div class="row">
                            <div class="col-md-2">
                                Title
                            </div>
                            <div class="col-md-10">
                                <input type="text" name="title" class="form-control" required="required"
                                       placeholder="Post title" {{ 'value='~ oldInput.title ~'' | default('') }}>
                            </div>
                        </div>
                        <br>

                        <div class="row">
                            <div class="col-md-2">
                                Text
                            </div>
                            <div class="col-md-10">
                                <textarea name="text" class="form-control" placeholder="Post text">{{ oldInput.text | default('') }}</textarea>

                            </div>
                        </div>
                        <br>

                        <div class="row">
                            <div class="col-md-2">
                                Category:
                            </div>
                            <div class="col-md-10">
                                <select name="category">
                                    {% for category in categories %}
                                        <option value="{{ category.id }}">{{ category.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <br>

                        <div class="row">
                            <div class="col-md-2">
                                Tags
                            </div>
                            <div class="col-md-10">
                                <input type="text" name="tags" class="form-control" required="required"
                                       placeholder="tag1,tag2,tag3" {{ 'value='~ oldInput.title ~'' | default('') }}>
                            </div>
                        </div>
                        <br>

                        <input type="submit" value="Add" class="btn btn-info">
                        <div class="row">
                            <div class="col-md-12">
                                {{ error | default("") }}
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-1"></div>
            </div>
        </div>
    {% endblock %}
